<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Luz y Luna</title>
    <link rel="stylesheet" href="~/css/bootstrap.min2.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="~/css/fontello2.css">
    <link rel="stylesheet" href="~/css/estilosusuario.css">
<link rel="stylesheet" href="~/css/estilo.css">
</head>

<body>
    <header>
        <div class="container">
            <!-- Logo + Menu -->
            <div class="nav row rounded-top align-items-strech justify-content-between">
                <!-- Logotipo -->
                <div id="header" class="col-md-12 col-lg logo d-flex align-items-center justify-content-center justify-content-lg-start">
                    <h2>Hotel Luz y Luna</h2>
                    <p>Lima Peru</p>
                </div>

                <!-- Menu -->
                <nav id="menu" class="col-md-12 col-lg-auto menu d-flex align-items-stretch flex-wrap flex-sm-nowrap">
                    <a href="#" class="c-1 d-flex align-items-center uno">
                        <div class="d-flex flex-column text-center">
                            <span>Inicio</span>
                            <i class="icono icon-briefcase uno"></i>
                        </div>
                    </a>
                    <a href="#habitaciones" class="c-2 d-flex align-items-center dos">
                        <div class="d-flex flex-column text-center dos">
                            <span>Habitaciones</span>
                            <i class="icono icon-user"></i>
                        </div>
                    </a>
                    <a href="#contacto" class="c-3 d-flex align-items-center tres">
                        <div class="d-flex flex-column text-center tres">
                            <span>Contacto</span>
                            <i class="icono icon-mail"></i>
                        </div>
                    </a>
                </nav>
            </div>

            <!-- Slider -->
            <div class="row slider">
                <div class="col">
                    <div class="carousel slide" id="slider" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider" data-slide-to="0" class="active"></li>
                            <li data-target="#slider" data-slide-to="1"></li>
                            <li data-target="#slider" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/slide1.jpg" alt="Slide #1" class="d-block img-fluid">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slide2.jpg" alt="Slide #2" class="d-block img-fluid">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slide3.jpg" alt="Slide #3" class="d-block img-fluid">
                            </div>
                        </div>

                        <a href="#slider" class="carousel-control-prev" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Anterior</span>
                        </a>
                        <a href="#slider" class="carousel-control-next" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

 @RenderBody()

    <footer>
        <div class="container">
            <div class="row redes-sociales justify-content-center">
                <div class="col-auto social">
                    <a href="#" class="icono icon-twitter twitter"></a>
                    <a href="#" class="icono icon-instagram instagram"></a>
                    <a href="#" class="icono icon-facebook facebook"></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/jquery-3.3.1.min2.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min2.js"></script>
    <script src="~/js/scriptsusuario.js"></script>
</body>

</html>