<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<title>Dashboard - Hotel Luz y Luna</title>
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Roboto:300,400,500" rel="stylesheet">
	<link rel="stylesheet" href="~/css/fontello.css">
	<link rel="stylesheet" href="~/css/estilos.css">
</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="barra-lateral col-12 col-sm-auto">
				<div class="logo" >
					<img src="~/img/logo2.png" width="150" height="150"  style="padding-left:20px;">
					<br>
					<h2> Hotel Luz y luna</h2>
				</div>
				<nav class="menu d-flex d-sm-block justify-content-center flex-wrap">
					<a asp-controller="Checkin" asp-action="Index"><i class="icon-home"></i><span>Check-In</span></a>
					<a href="#"><i class="icon-doc-text"></i><span>Huesped</span></a>
					<a href="#"><i class="icon-users"></i><span>Productos</span></a>
					<a asp-controller="Ventas" asp-action="Index"><i class="icon-users"></i><span>Room Services</span></a>
					<a href="#"><i class="icon-logout"></i><span>Check-Out</span></a>
					<a href="#"><i class="icon-logout"></i><span>Salir</span></a>
				</nav>
			</div>
   
        
            @RenderBody()
     

   </div>
	</div>
	
	

	
	<script src="~/js/jquery-3.2.1.min.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
</body>
</html>